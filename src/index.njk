---
layout: false
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Developer Directory</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/assets/css/style.css">
  <script>
    const saved = localStorage.getItem('theme');
    if (saved === 'dark') document.documentElement.classList.add('dark');
  </script>
</head>
<body class="min-h-screen scroll-smooth">

  <header class="sticky top-0 z-50 bg-[var(--bg-page)]/80 backdrop-blur-md border-b border-[var(--border-color)] py-6 mb-8">
    <div class="max-w-7xl mx-auto px-4 flex justify-between items-center">

      <div class="border-l-4 border-accent pl-6">
        <h1 class="text-3xl font-black uppercase tracking-tight">Our Developers</h1>
        <div class="flex flex-wrap items-center gap-x-4 gap-y-1 mt-1">
          <span class="text-xs font-bold text-accent uppercase tracking-widest">
            {{ collections.randomPeople.length }} Active Profiles
          </span>
          <span class="text-slate-300 dark:text-slate-700">|</span>
          <p class="text-[var(--text-muted)] text-xs font-medium uppercase tracking-tighter">
            Global Network: Worldwide
          </p>
        </div>
      </div>

      <div class="flex items-center gap-3">
        <button onclick="toggleTheme()" class="p-3 rounded-full bg-[var(--bg-card)] border border-[var(--border-color)] shadow-sm active:scale-90 transition-transform">
          <span id="theme-icon">ðŸŒ™</span>
        </button>
        <button onclick="scrollToRandomUser()" class="bg-accent text-white text-[10px] font-bold uppercase tracking-widest px-5 py-3 rounded-full shadow-lg active:scale-95 transition-all">
          ðŸŽ² Surprise Me
        </button>
      </div>
    </div>
  </header>

  <main class="max-w-7xl mx-auto px-4 pb-24">
    <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-8">
      {% for person in collections.randomPeople %}
      <div class="user-card group rounded-2xl overflow-hidden flex flex-col scroll-mt-32">
        <div class="p-8">
          <div class="flex justify-between items-start gap-4">
            <div class="flex-1">
              <h2 class="text-2xl font-bold group-hover:text-accent transition-colors">{{ person.data.name }}</h2>
              <p class="text-accent font-semibold text-sm uppercase tracking-wider">{{ person.data.role }}</p>
            </div>
            <span class="shrink-0 text-[10px] bg-[var(--bg-footer)] text-[var(--text-muted)] px-2 py-1 rounded font-bold uppercase border border-[var(--border-color)]">
              {{ person.data.location }}{% if person.data.country %}, {{ person.data.country }}{% endif %}
            </span>
          </div>

          <div class="mt-6 flex flex-wrap gap-2">
            {% set skills = person.data.languages.split(' ') %}
            {% for skill in skills %}
              <span class="px-2 py-1 bg-accent text-white text-[10px] font-bold rounded uppercase">{{ skill }}</span>
            {% endfor %}
          </div>

          <p class="mt-4 text-[var(--text-muted)] text-sm italic line-clamp-3">"{{ person.data.bio | truncate(120) }}"</p>
        </div>

        <div class="mt-auto card-footer p-4 flex justify-between items-center px-6">
          <div class="flex items-center gap-4">
            {% if person.data.github %}
            <a href="https://github.com/{{ person.data.github }}" target="_blank" rel="noopener" class="text-[var(--text-muted)] hover:text-accent transition-colors">
              <span class="text-[11px] font-bold uppercase tracking-tighter">GitHub</span>
            </a>
            {% endif %}

            {% if person.data.linkedin %}
            <a href="{{ person.data.linkedin }}" target="_blank" rel="noopener" class="text-[var(--text-muted)] hover:text-accent transition-colors">
              <span class="text-[11px] font-bold uppercase tracking-tighter">LinkedIn</span>
            </a>
            {% endif %}
          </div>

          <a href="{{ person.url }}" class="font-bold text-accent flex items-center group/link">
            <span>Full Bio</span>
            <span class="inline-block ml-1 transition-transform group-hover/link:translate-x-2">â†’</span>
          </a>
        </div>
      </div>
      {% endfor %}
    </div>
  </main>

  {% include "footer.njk" %}

  <script src="/assets/js/script.js"></script>
</body>
</html>
